<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5"
 xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
 <display-name>HeadFirstJspServletChap02</display-name>
 <context-param>
  <param-name>db-source</param-name>
  <param-value>jdbc:mysql://127.0.0.1:3306/jee</param-value>
 </context-param>
 <filter>
  <filter-name>charSet</filter-name>
  <filter-class>filter.CharSetFilter</filter-class>
 </filter>
 <filter>
  <filter-name>logFilter</filter-name>
  <filter-class>filter.LogFilter</filter-class>
 </filter>
 <filter>
  <filter-name>illegalVisit</filter-name>
  <filter-class>filter.IllegalVisit</filter-class>
 </filter>
 <filter-mapping>
  <filter-name>charSet</filter-name>
  <url-pattern>/*</url-pattern>
 </filter-mapping>
 <filter-mapping>
  <filter-name>logFilter</filter-name>
  <servlet-name>loginServlet</servlet-name>
 </filter-mapping>
 <filter-mapping>
  <filter-name>illegalVisit</filter-name>
  <url-pattern>/login.jsp</url-pattern>
 </filter-mapping>
 <listener>
  <listener-class>listener.MyServletContextListener</listener-class>
 </listener>
 <listener>
  <listener-class>listener.ExistingSessionCounter</listener-class>
 </listener>
 <servlet>
  <servlet-name>loginServlet</servlet-name>
  <servlet-class>servlet.LoginServlet</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>stuInfoServlet</servlet-name>
  <servlet-class>servlet.StuInfoServlet</servlet-class>
  <init-param>
   <param-name>name</param-name>
   <param-value>wsy</param-value>
  </init-param>
  <init-param>
   <param-name>age</param-name>
   <param-value>21</param-value>
  </init-param>
 </servlet>
 <servlet>
  <servlet-name>logOut</servlet-name>
  <servlet-class>servlet.LogOutServlet</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>loginServlet</servlet-name>
  <url-pattern>/loginServlet</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>stuInfoServlet</servlet-name>
  <url-pattern>/stuInfoServlet</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>logOut</servlet-name>
  <url-pattern>/logOut</url-pattern>
 </servlet-mapping>
 <session-config>
  <session-timeout>1</session-timeout>
 </session-config>
 <welcome-file-list>
  <welcome-file>index.html</welcome-file>
  <welcome-file>index.htm</welcome-file>
  <welcome-file>index.jsp</welcome-file>
  <welcome-file>default.html</welcome-file>
  <welcome-file>default.htm</welcome-file>
  <welcome-file>default.jsp</welcome-file>
 </welcome-file-list>
</web-app>
